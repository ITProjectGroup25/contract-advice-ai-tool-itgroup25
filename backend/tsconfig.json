{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "types": [
      "node"
    ],
    "paths": {
      "@drizzle/*": [
        "./drizzle/*"
      ],
      "@backend": [
        "./src/index"
      ],
      "@backend/*": [
        "./src/*"
      ],
      "@shared": [
        "../shared/src/index"
      ],
      "@shared/*": [
        "../shared/src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "drizzle/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
